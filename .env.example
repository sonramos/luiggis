# Django settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=127.0.0.1,localhost

# PostgreSQL settings (used by the DB container)
POSTGRES_DB=luiggis_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Database URL used by Django. When running with docker-compose, use the
# service name `db` as the host (Postgres container).
DATABASE_URL=postgres://postgres:postgres@db:5432/luiggis_db

# Match container user with host user to avoid root-owned files when using volumes
# You can set these before building, or pass build-args when running `docker compose build`.
USER_ID=1000
GROUP_ID=1000
